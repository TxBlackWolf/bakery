<div class="col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Create a new product</h3>
    </div>
    <div class="panel-body">
      <form>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="title" class="col-md-4 control-label">Product Title</label>
            <div class="col-md-8">
              {{input value=title type="text" class="form-control"}}
            </div>
          </div>
        </div>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="description" class="col-md-4 control-label">Description</label>
            <div class="col-md-8">
              {{textarea value=description rows=5 class="form-control"}}
            </div>
          </div>
        </div>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="type" class="col-md-4 control-label">Batch size</label>
            <div class="col-md-8">
              {{input value=batchSize type="number" class="form-control" step="1"}}
            </div>
          </div>
        </div>
        <div class="form-horizontal">
          <div class="form-group">
            <label for="date" class="col-md-4 control-label">Cost</label>
            <div class="col-md-8">
              <div class="input-group">
                <div class="input-group-addon">$</div>
                  {{input value=cost type="number" class="form-control"}}
              </div>
            </div>
          </div>
        </div>
        <!-- <input type="file" id="exampleInputFile"> -->
      </form>
    </div>
    <div class="panel-footer">
      <button name="button" class="btn btn-info btn-block" {{action 'createProduct'}}>Create new product</button>
    </div>
  </div>
</div>
