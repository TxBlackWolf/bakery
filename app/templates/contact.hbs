<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">CONTACT US</h3>
  </div>

  <div class="panel-body">
    <form>
    <!-- CHECKBOXES -->
      <h3>Please Check all the Products You're Interested In: </h3>
      {{#each product in model}}
        <div class="col-md-4">
          {{input type="checkbox" name=product.title checked=product.selected class="checkbox" action="checkBox"}} {{product.title}}
          <br>
        </div>
      {{/each}}
    <hr>
    <br>
  <!-- CHECKBOXES -->
      {{input type="text" placeholder="Business Name" value=businessName class="form-control"}}
      <br>
      {{input type="text" placeholder="Email" value=emailAddress class="form-control"}}
      <br>
      {{input type="text" placeholder="Address" value=streetAddress class="form-control"}}
      <br>
      {{input type="text" placeholder="City" value=city class="address"}}
      {{input type="text" placeholder="State" value=state class="address"}}
      {{input type="text" placeholder="Zip Code" value=zip class="address"}}
      <br>
      {{input type="text" placeholder="Phone Number" value=phone class="form-control"}}

      <!-- {{input type="text" placeholder="Products Interested In" value=Product}} -->
    </form>
  </div>
  <div class="panel-footer">
    <button class="btn btn-danger btn-block" {{action 'addContact'}}>Submit</button>
  </div>
</div>
