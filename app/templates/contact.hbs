<div class="col-md-8 col-md-offset-2">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">CONTACT US</h3>
    </div>

    <div class="panel-body">
      <form>
        <div class="form-group">
          {{input type="text" placeholder="Business Name" value=businessName class="form-control"}}
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-6">
              {{input type="email" placeholder="Email" value=emailAddress class="form-control"}}
            </div>
            <div class="col-md-6">
              {{input type="tel" placeholder="Phone Number" value=phone class="form-control"}}
            </div>
          </div>
        </div>
        <div class="form-group">
          {{input type="text" placeholder="Address" value=streetAddress class="form-control"}}
        </div>
        <div class="form-group">
          <div class="row">
            <div class="col-md-4">
              {{input type="text" placeholder="City" value=city class="form-control"}}
            </div>
            <div class="col-md-4">
              {{input type="text" placeholder="State" value=state class="form-control"}}
            </div>
            <div class="col-md-4">
              {{input type="text" placeholder="Zip Code" value=zip class="form-control"}}
            </div>
          </div>
        </div>
        <!-- CHECKBOXES -->
        <div class="form-group">
          <div class="row">
            <div class="col-md-12">
              <p class="lead text-center">Please Select the Products You're Interested In: </p>
              {{#each product in model}}
                <div class="col-md-4">
                  <div class="checkbox">
                    <label>
                      {{input type="checkbox" name=product.title checked=product.selected class="checkbox" action="checkBox"}} {{product.title}}
                    </label>
                  </div>
                </div>
              {{/each}}
            </div>
          </div>
        </div>
        <!-- /CHECKBOXES -->
      </form>
    </div>
    <div class="panel-footer">
      <button class="btn btn-danger btn-block" {{action 'addContact'}}>Submit</button>
    </div>
  </div>

</div>
