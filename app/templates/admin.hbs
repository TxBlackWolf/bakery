<div class="btn-group btn-group-justified" role="group" aria-label="...">
  {{#if session.isAuthenticated}}
    <div class="btn-group" role="group">
      {{#link-to "new-product" class="btn btn-success"}}
        <div {{action "newProduct"}}>
          Add new product
        </div>
      {{/link-to}}
    </div>
    <div class="btn-group" role="group">
      {{#link-to "edit" class="btn btn-warning"}}
        <div {{action "editProduct"}}>
          Edit a product
        </div>
      {{/link-to}}
    </div>
    <div class="btn-group" role="group">
      {{#link-to "contacts" class="btn btn-primary"}}
        <div>
          View Contacts
        </div>
      {{/link-to}}
    </div>
    <div class="btn-group" role="group">
      <a {{ action 'invalidateSession' }} class="btn btn-info">
        Logout
      </a>
    </div>
  {{else}}
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <h3 class="text-center">Login</h3>
        <button {{action 'googleLogin'}} class="btn btn-success btn-block">Login with Google</button>
      </div>
    </div>
  {{/if}}
</div>
