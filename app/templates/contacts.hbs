<div class="well">
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <tr>
        <th>Business Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Street Address</th>
        <th>City</th>
        <th>State</th>
        <th>Zip Code</th>
      </tr>
    </thead>
    <tbody>
      {{#each contact in model}}
        <tr>
          <td>{{contact.businessName}}</td>
          <td><a href="mailto:{{contact.emailAddress}}">{{contact.emailAddress}}</a></td>
          <td>{{contact.phone}}</td>
          <td>{{contact.streetAddress}}</td>
          <td>{{contact.city}}</td>
          <td>{{contact.state}}</td>
          <td>{{contact.zip}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <table class="table table-striped table-bordered table-condensed">
    <thead>
      <th>Business Name</th>
      <th>Product Interests</th>
    </thead>
    <tbody>
      {{#each contact in model}}
        <tr>
          <td>{{contact.businessName}}</td>
          <td>{{contact.productInterest}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div id="map">

  {{#if hideMap}}
    <div {{action 'toggleMap'}}>
      {{#link-to 'contacts-map' class="btn btn-info"}} Open Map {{/link-to}}
    </div>
  {{else}}
    <div {{action 'toggleMap'}}>
      {{#link-to 'contacts' class="btn btn-warning"}} Close Map {{/link-to}}
    </div>
  {{/if}}

  {{outlet "contactsMap"}}

</div>
